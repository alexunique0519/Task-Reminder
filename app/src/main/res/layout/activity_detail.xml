<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.taskreminder.DetailActivity">

    <EditText
        android:id = "@+id/task_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp"
        android:ems="10"
        android:text=""
        android:editable="false"
        />

    <EditText
        android:id = "@+id/task_name"
        android:layout_below="@+id/task_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/task_id"
        android:ems="10"
        android:text=""
        />

    <EditText
        android:id = "@+id/due_date"
        android:layout_below="@+id/task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/task_id"
        android:ems="10"
        android:text=""
        android:editable="false"
        />

    <Button
        android:id="@+id/date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Date"
        android:layout_alignLeft="@+id/tv_taskName"
        android:layout_alignBottom="@+id/due_date"
        />

    <Button
        android:id="@+id/time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Time"
        android:layout_alignLeft="@+id/tv_taskName"
        android:layout_alignBottom="@+id/due_time"
        />

    <EditText
        android:id = "@+id/due_time"
        android:layout_below="@+id/due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/task_id"
        android:ems="10"
        android:text=""
        android:editable="false"
        />

    <EditText
        android:id = "@+id/description"
        android:layout_below="@+id/due_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/task_id"
        android:ems="10"
        android:maxLines="4"
        android:maxLength="150"
        android:scrollHorizontally="false"
        android:text=""
        />


    <TextView
        android:id= "@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/task_id"
        android:layout_alignParentLeft="true"
        android:text="ID:"
        android:layout_marginLeft="16dp"
        android:paddingBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <TextView
        android:id= "@+id/tv_taskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/task_name"
        android:layout_alignParentLeft="true"
        android:text="Task Name:"
        android:layout_marginLeft="16dp"
        android:paddingBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <!--TextView
        android:id= "@+id/tv_dueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/due_date"
        android:layout_alignParentLeft="true"
        android:text="Due Date:"
        android:layout_marginLeft="16dp"
        android:paddingBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        /-->

    <!--TextView
        android:id= "@+id/tv_dueTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/due_time"
        android:layout_alignParentLeft="true"
        android:text="Due Time:"
        android:layout_marginLeft="16dp"
        android:paddingBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        /-->

    <TextView
        android:id= "@+id/tv_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/description"
        android:layout_alignParentLeft="true"
        android:text="Description:"
        android:layout_marginLeft="16dp"
        android:paddingBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />





</RelativeLayout>
